<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.temporaryapp.ui.main.MainFragment">


    <LinearLayout
        android:id="@+id/bank_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/bank_url_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bank_url"
            android:textSize="@dimen/inputTextSize"/>

        <TextView
            android:id="@+id/bank_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bank_number"
            android:textSize="@dimen/inputTextSize"/>

        <TextView
            android:id="@+id/coordinates_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bank_coordinates"
            android:textSize="@dimen/inputTextSize"/>

    </LinearLayout>


    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_bin_text"
        android:textSize="@dimen/inputTextSize"
        android:layout_marginTop="25dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bank_data" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message" >

        <EditText
            android:id="@+id/binInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/inputBinButton"
            android:inputType="number"
            android:textSize="@dimen/inputTextSize"
            android:textStyle="normal" />

        <Button
            android:id="@+id/inputBinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/input_text"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>